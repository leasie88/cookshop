<script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.0/jquery.min.js"></script>
<style>
#tabsContainer { float:center; margin:auto }
.tabs ul {list-style:none}
.tabs ul li {display:inline-block; width:30%; text-align:center }
.tabs ul li a{text-decoration:none}
.tabs ul li a:hover { color:blue; background:none }
</style>
<div class="container">
	<div class="row">
		<div class="twelve columns">
			<div class="four columns" id="tabsContainer">
				<div class="tabs">
					<ul>
						<li> <a href="#" id="brunch" onclick="changeTab('brunch-contents')">Brunch</a></li>
						<li> <a href="#" id="lunch" onclick="changeTab('lunch-contents')">Lunch</a></li>
						<li> <a href="#" id="dinner" onclick="changeTab('dinner-contents')">Dinner</a></li>
					</ul>
				</div>
			</div>
			<div id="brunch-contents">
				<%= @menu.brunch %>
			</div>
			<div id="lunch-contents">
				<%= @menu.lunch %>
			</div>
			<div id="dinner-contents">
				<%= @menu.dinner %>
			</div>
		</div>
	</div>
</div>

<script type="text/javascript">
function changeTab(tab) {
	$("#brunch-contents").hide();
	$("#lunch-contents").hide();
	$("#dinner-contents").hide();
	$("#"+tab).fadeIn(300);
}

$(document).ready(function() {
	$("#brunch-contents").hide();
	$("#lunch-contents").hide();
});
</script>